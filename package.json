{
  "name": "@bahmutov/add-typescript-to-cypress",
  "description": "Quickly adds TypeScript spec support to Cypress",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/add-typescript-to-cypress/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "git add src/*.js",
        "echo skip npm run ban"
      ],
      "pre-push": [
        "npm run unused-deps || true",
        "npm run secure || true",
        "npm run license",
        "echo skip npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/add-typescript-to-cypress#readme",
  "keywords": [
    "cypress",
    "cypress-io",
    "plugin",
    "typescript"
  ],
  "license": "MIT",
  "main": "src/",
  "private": false,
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/add-typescript-to-cypress.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check --no-dev . --entry src/add-plugin.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "prelint": "npm run pretty",
    "pretest": "npm run lint",
    "pretty": "prettier-standard 'src/*.js'",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "unused-deps": "dependency-check --unused --no-dev . --entry src/add-plugin.js --entry src/plugin.js",
    "postinstall": "node src/add-plugin.js",
    "semantic-release": "semantic-release pre && npm publish --access public && semantic-release post"
  },
  "release": {
    "analyzeCommits": "simple-commit-message",
    "generateNotes": "github-post-release",
    "verifyRelease": {
      "path": "dont-crack",
      "test-against": []
    }
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.2",
    "dependency-check": "3.0.0",
    "deps-ok": "1.2.2",
    "dont-crack": "1.2.1",
    "git-issues": "1.3.1",
    "github-post-release": "1.13.1",
    "license-checker": "16.0.0",
    "mocha": "5.0.1",
    "nsp": "3.2.1",
    "pre-git": "3.17.0",
    "prettier-standard": "8.0.0",
    "semantic-release": "12.4.1",
    "simple-commit-message": "4.0.3",
    "standard": "10.0.3"
  },
  "dependencies": {
    "@cypress/webpack-preprocessor": "1.1.3",
    "am-i-a-dependency": "1.1.2",
    "angular2-template-loader": "0.6.2",
    "chalk": "2.3.1",
    "debug": "3.1.0",
    "raw-loader": "0.5.1",
    "shelljs": "0.8.1",
    "terminal-banner": "1.1.0",
    "ts-loader": "3.5.0"
  },
  "peerDependencies": {
    "typescript": "*"
  }
}
